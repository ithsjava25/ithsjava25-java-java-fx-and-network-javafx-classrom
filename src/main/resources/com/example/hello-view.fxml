<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="576.0" prefWidth="435.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">
    <VBox prefHeight="576.0" prefWidth="435.0" spacing="10" AnchorPane.bottomAnchor="0.0">
        <ListView fx:id="messageList" prefHeight="510.0" prefWidth="435.0" />
        <HBox spacing="10">
            <VBox prefWidth="300.0">
                <TextField fx:id="inputField" promptText="Type here" />
                <Label fx:id="fileLabel" prefHeight="18.0" prefWidth="301.0" text="No file selected" />
            </VBox>
            <VBox prefHeight="51.0" prefWidth="78.0">
                <Button onAction="#sendMessage" text="Send" />
                <Button onAction="#attachFile" text="Attach File" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
