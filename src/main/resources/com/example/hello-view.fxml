<?xml version="1.0" encoding="UTF-8"?>

<!-- Enkel chattvy med lista, textfält och knapp -->
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.HelloController">

    <!-- Meddelandelista -->
    <center>
        <ListView fx:id="messages"/>
    </center>

    <!-- Textfält och knapp -->
    <bottom>
        <HBox spacing="8" alignment="CENTER_LEFT">
            <TextField fx:id="inputField" promptText="Skriv ett meddelande..." HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendBtn" text="Skicka" defaultButton="true"/>
        </HBox>
    </bottom>

    <!-- Luft runt hela layouten -->
    <padding>
        <Insets topRightBottomLeft="8"/>
    </padding>

</BorderPane>