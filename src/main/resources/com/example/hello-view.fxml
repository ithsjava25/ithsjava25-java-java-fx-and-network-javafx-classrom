<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="594.0" prefWidth="540.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">

        <top>
            <VBox prefHeight="50.0">
                <Label text="CatCode Messenger">
            <font>
               <Font name="Bookman Old Style Bold Italic" size="36.0" />
            </font></Label>
            </VBox>
        </top>

    <center>
        <ScrollPane opacity="0.6">
            <VBox fx:id="chatBox" />
        </ScrollPane>
    </center>

    <bottom>
        <HBox>
            <TextField fx:id="messageInput" prefHeight="50" promptText="Skriv ett meddelande..." HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" text="Skicka" />
        </HBox>
    </bottom>


</BorderPane>
