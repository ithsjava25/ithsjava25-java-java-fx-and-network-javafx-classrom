<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.HelloController"
      spacing="10" styleClass="root-pane">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <!-- Hälsning -->
    <Label fx:id="messageLabel" text="Hello, JavaFX" />

    <!--Lista för meddelanden-->
    <Label text="Meddelanden: " />
    <ListView fx:id="messageListView" prefHeight="200" styleClass="list-view" />

    <!--Inputfält och knappar-->
    <HBox spacing="10">
        <TextField fx:id="messageTextField" promptText="Skriv ett meddelande..." />
        <Button text="Skicka" onAction="#sendMessage" />
    </HBox>

    <!--Prenumerationsknappar-->
    <HBox spacing="10">
        <Button text="Prenumerera" onAction="#subscribeToTopic" />
        <Button text="Avbryt prenumeration" onAction="#unsubscribeFromTopic" />
    </HBox>

    <!--Status för anslutning-->
    <Label fx:id="connectionStatusLabel" text="Ansluten: nej" />
</VBox>



