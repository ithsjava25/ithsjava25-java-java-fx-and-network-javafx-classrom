<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="594.0" prefWidth="540.0"
            stylesheets="@../../css/style.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.HelloController">

    <top>
        <VBox alignment="CENTER" styleClass="top-bar">
            <Label text="CatCode Messenger" styleClass="title-bar"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fx:id="messageToLast" fitToWidth="true">
            <VBox fx:id="chatBox" styleClass="chat-box-container" />
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="input-bar">
            <TextField fx:id="messageInput"
                       promptText="Skriv ett meddelande..."
                       HBox.hgrow="ALWAYS"
                       styleClass="text-field"/>
            <Button fx:id="sendButton" text="Skicka" />
        </HBox>
    </bottom>

</BorderPane>
