<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.HelloController">
    <Label fx:id="messageLabel" text="Hello, JavaFX!" />
    <Button text="Attach file" onAction="#attachFile"/>
    <TextField fx:id="messageInput" promptText="Write a message..."/>
    <ListView fx:id="messageView"/>
</VBox>
