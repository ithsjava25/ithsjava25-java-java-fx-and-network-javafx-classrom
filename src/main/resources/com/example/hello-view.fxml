<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" styleClass="chat-container" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController">

    <!-- Padding fÃ¶r hela VBox -->
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>

            <!-- Header -->
            <Label fx:id="messageLabel" styleClass="chat-title" text="Welcome to YadaChat!" />
        </children>
    </HBox>

    <Separator />

    <!-- Message List -->
    <ListView fx:id="messageView" prefHeight="350" prefWidth="500" styleClass="message-list" VBox.vgrow="ALWAYS" />

    <!-- Current room + room changer packeterat -->
    <HBox alignment="CENTER_RIGHT" spacing="20">
         <!-- Current room -->
         <Label fx:id="topicLabel" styleClass="topic-label" text="Room: mytopic">
             <padding>
                 <Insets bottom="0" left="0" right="0" top="0" />
             </padding>
         </Label>

        <!-- Room changer -->
        <HBox alignment="CENTER_RIGHT" spacing="8" styleClass="topic-container">
            <Label styleClass="topic-input-label" text="Change room:" />
            <TextField fx:id="topicInput" prefWidth="180" promptText="Enter room name" styleClass="topic-input" />
            <Button fx:id="changeTopicButton" onAction="#changeTopic" styleClass="topic-button" text="Join Room" />
        </HBox>
    </HBox>

    <!-- Input Area centrerad -->
    <HBox alignment="CENTER" spacing="10" styleClass="input-container">
        <TextArea fx:id="messageInput" prefHeight="50" prefWidth="380" promptText="Type a message..." styleClass="message-input" wrapText="true" />
        <Button fx:id="sendButton" onAction="#sendMessage" styleClass="send-button" text="Send" />
    </HBox>

</VBox>
