<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.HelloController">

    <Label fx:id="messageLabel" text="Hello, JavaFX!"/>

    <TextField fx:id="messageInput" promptText="Type message here"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Send message" onAction="#sendMessage"/>
        <Button text="Send file" onAction="#sendFile"/>
        <Button text="Send file from URL" onAction="#sendFileFromUrl"/>
    </HBox>

    <ListView fx:id="messageView" VBox.vgrow="ALWAYS"/>

</VBox>