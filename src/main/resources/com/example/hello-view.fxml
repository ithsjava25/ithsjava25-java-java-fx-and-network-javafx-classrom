<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<BorderPane prefHeight="700.0" prefWidth="540.0" stylesheets="@../../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HelloController" >

        <top>
            <VBox>
                <Label text="CatCode Messenger"/>
            </VBox>
        </top>

    <center>
        <ScrollPane>
            <VBox fx:id="chatBox" />
        </ScrollPane>
    </center>

    <bottom>
        <HBox>
            <TextField fx:id="messageInput" text="Skriv ett meddelande..." HBox.hgrow="ALWAYS" />
            <Button text="Skicka" fx:id="sendButton" />
        </HBox>
    </bottom>


</BorderPane>