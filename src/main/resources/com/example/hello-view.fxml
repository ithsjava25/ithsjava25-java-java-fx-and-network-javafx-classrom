<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-size: cover; -fx-background-position: center center;-fx-background-repeat: no-repeat;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.HelloController">
    <center>
        <ListView fx:id="chatListView" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <!-- VBox för att hålla BIFOGAD FIL-STATUS och input-fältet -->
        <VBox spacing="5.0" style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10;">
            <children>
                <!-- Label för att visa bifogad fil. Kopplad till attachedFileLabel i Controller. -->
                <Label fx:id="attachedFileLabel"
                       style="-fx-font-style: italic; -fx-font-size: 12px; -fx-text-fill: #333;"
                       text="Ingen fil bifogad" />


                <HBox alignment="CENTER" spacing="10.0">
                    <children>

                        <TextField fx:id="messageInput"
                                   onAction="#sendMessage"
                                   promptText="Write your message here..."
                                   HBox.hgrow="ALWAYS" />

                        <Button fx:id="sendButton" mnemonicParsing="false"
                                onAction="#sendMessage"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"
                                text="Send message" />


                        <Button fx:id="attachFile"
                                mnemonicParsing="false"
                                onAction="#attachFile"
                                style="-fx-background-color: #2196F3;-fx-text-fill: white; -fx-font-weight: bold;"
                                text="Attach File" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <top>

        <VBox style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 10;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;"
                       text="Welcome to SuperChatten!"
                       textFill="WHITE" />


                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10 0 0 0;">

                    <Label fx:id="topicLabel"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"
                           textFill="WHITE" />


                </HBox>
            </children>
        </VBox>
    </top>
</BorderPane>
