        <TextField fx:id="inputField" promptText="Type message here" />
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Send message" onAction="#sendMessage" />
                <Button text="Attach file" onAction="#handleAttachFile" />
                <Button text="Send file from URL" onAction="#sendFileFromUrl" />
