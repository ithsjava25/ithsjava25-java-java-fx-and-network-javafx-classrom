<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.HelloController"
            stylesheets="@chat-style.css">

    <!-- Chattfönster -->
    <center>
        <ScrollPane fx:id="chatScroll" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <VBox fx:id="chatBox" spacing="8" style="-fx-padding: 16;" />
        </ScrollPane>
    </center>

    <!-- Meddelandefält -->
    <bottom>
        <VBox spacing="4" style="-fx-padding: 8;">
            <Label fx:id="statusLabel" textFill="#888" style="-fx-font-size: 12;" />
            <HBox spacing="8">
                <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Skriv ett meddelande..." />
                <Button text="Skicka" onAction="#handleSend" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
